{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Events</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Start</th>
                <td>{{ entity.start|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ entity.end|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Recur</th>
                <td>{{ entity.recur }}</td>
            </tr>
            <tr>
                <th>Recurend</th>
                <td>{{ entity.recurEnd|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Privatedescription</th>
                <td>{{ entity.privateDescription }}</td>
            </tr>
            <tr>
                <th>Createdon</th>
                <td>{{ entity.createdOn|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedon</th>
                <td>{{ entity.updatedOn|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Preparationtime</th>
                <td>{{ entity.preparationTime }}</td>
            </tr>
            <tr>
                <th>Cleaningtime</th>
                <td>{{ entity.cleaningTime }}</td>
            </tr>
            <tr>
                <th>Publicdescription</th>
                <td>{{ entity.publicDescription }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('events') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('events_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
